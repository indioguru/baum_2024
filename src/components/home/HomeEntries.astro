---
import TicketPrices from './utils/TicketPrices.astro';
import SvgFigureGreen from '../../svgs/SvgFigureGreen.astro';

const { data } = Astro.props;
---

<section id='Entradas' class='bg-black relative'>
  <div class='container_all'>
    <h2 class='pt-[200px] lg:pt-[400px] title'>Entradas</h2>
    <div class='border-t w-full'></div>

    {data.map((item, index) => <TicketPrices key={index} title={item.Tipo_entrada} prices={item.entrada} />)}

    <div class='button_two text-end pt-[50px] pb-[100px] lg:pb-[250px]'>
      <button onclick="window.open('https://alcancias.armatuvaca.com/baum-cashless-2024/devoluciones', '_blank')" class='entradas entradas_internacionales2'
        > Devoluciones cashless</button
      >
    </div>
  </div>
  <div class='lg:flex lg:flex-col lg:items-center w-full'>
    <div class='relative w-[120%] left-[-20px] lg:left-0 translate-y-[1px] lg:translate-y-[5px]'>
      <SvgFigureGreen />
    </div>
    <div class='relative w-[115%] left-[-20px] rotate-[180deg] lg:left-0 lg:w-[120%]'>
      <SvgFigureGreen />
    </div>
  </div>
</section>
