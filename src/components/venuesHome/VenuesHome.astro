---
import SvgFigurePink from '../../svgs/SvgFigurePink.astro';
import SvgFigureOrange from '../../svgs/SvgFigureOrange.astro';

const { data } = Astro.props;
---

<section class='relative'>
  <!-- <div class='w-[70%] rotate-[180deg] max-w-[600px]'>
    <SvgFigurePink />
  </div> -->

  <div class='container_all pt-[50px] lg:pt-[100px]'>
    <h2 class='title leading-[60px]'>Resident Advisor / Fabric</h2>
    <div class='border w-full opacity-70'></div>

    <p class='bg-white p-2 inline-block sharp text-[20px] mt-[60px] hover:text-green_two hover:bg-black'>{data[0]?.Asociado}</p>
    <p class='mt-[13px] text-[14px] text-white pp-book lg:w-[70%]'>{data[0]?.Texto}</p>
    <div class='button_two text-end mt-[22px] ver_mas_resident_fabric'>
      <a class="ver_mas_resident_fabric ver_todos_resident_fabric" href={data[0]?.Link} target='_blank' rel='noopener noreferrer'> VER M√ÅS</a>
    </div>

    <a class='p-2 text-[16px] sharp bg-white inline-block mt-[60px] hover:text-green_two hover:bg-black ' href={'/venues'}>{data[1]?.Asociado}</a>
    <br />
    {
      data[2]?.Asociado && (
        <a class='p-2 text-[12px] sharp bg-white inline-block mt-[14px] hover:text-green_two hover:bg-black' href={'/venues'}>
          {data[2]?.Asociado}
        </a>
      )
    }

    <div class='button_two text-end mt-[22px] pb-[50px] ver_todos_resident_fabric'>
      <a href={'/venues'} rel='noopener noreferrer ver_todos_resident_fabric'>VER TODOS</a>
    </div>
  </div>
